<div class="container mx-auto">
  <div class='row text-center'>
    <div class="col-sm-12">
      <h2><%= @task.title %></h2>
      <p><%= @task.details %></p>
      <div class="d-inline-flex align-items-center mb-2">
        <i class="far fa-edit fa-md text-secondary"><%= link_to 'Edit', edit_task_path(@task), :class => 'mr-1 badge badge-pill badge-info' %></i>
        <i class="fas fa-trash-alt fa-md text-secondary"><%= link_to 'Delete',
          task_path(@task),
          method: :delete,
          data: {confirm: "Do you want to delete this task?"}, :class => 'ml-1 badge badge-pill badge-warning'%></i>
      </div>
      <%= link_to("Back to list", tasks_path) %>
    </div>
  </div>
</div>
