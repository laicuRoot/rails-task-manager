<div class="container mx-auto">
  <div class="row text-center">
    <div class="col-sm-12 mt-5">
      <h2> Your Tasks:</h2>
    </div>
    <div class="col-sm-12 mt-2">
      <% @tasks.each do |task| %>
      <div class="d-flex align-items-center justify-content-center">
        <% if task.completed == true %>
        <i class="fas fa-check-square fa-lg"></i>
        <% end %>
        <p class="h3"><%= link_to task.title, task_path(task) %></p>
      </div>
      <div class="d-inline-flex align-items-center mb-2">
        <i class="far fa-edit fa-md text-secondary"><%= link_to 'Edit', edit_task_path(task), :class => 'mr-1 badge badge-pill badge-info' %></i>
        <i class="fas fa-trash-alt fa-md text-secondary"><%= link_to 'Delete',
          task_path(task),
          method: :delete,
          data: {confirm: "Do you want to delete this task?"}, :class => 'ml-1 badge badge-pill badge-warning'%></i>
      </div>
      <% end %>
    </div>
  </div>
  <div class='row text-center'>
    <div class="col-sm-12">
      <button class='btn'><%= link_to 'New task', new_task_path(@task), :class => 'btn-primary btn-lg' %></button>
    </div>
  </div>
</div>
